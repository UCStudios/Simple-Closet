<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="381dp"
            android:layout_height="372dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="102dp">

                <Button
                    android:id="@+id/topButton"
                    android:layout_width="188dp"
                    android:layout_height="188dp"
                    android:background="@drawable/ic_polo" />

                <Button
                    android:id="@+id/sweaterButton"
                    android:layout_width="188dp"
                    android:layout_height="188dp"
                    android:background="@drawable/ic_sweater" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/jeansButton"
                    android:layout_width="188dp"
                    android:layout_height="188dp"
                    android:background="@drawable/ic_jeans" />

                <Button
                    android:id="@+id/shoesButton"
                    android:layout_width="188dp"
                    android:layout_height="188dp"
                    android:background="@drawable/ic_shoes" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="101dp" />
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>